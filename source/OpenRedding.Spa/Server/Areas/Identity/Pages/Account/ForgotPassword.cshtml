@page
@model ForgotPassword
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row align-self-center w-100">
    <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-body">
                <h4 class="text-center">Forgot Your Password?</h4>
                <p class="text-center">Enter your email address below, and if we find your account, we'll send you a link to reset your password.</p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ForgotPasswordInput.Email"></label>
                        <input asp-for="ForgotPasswordInput.Email" class="form-control" />
                        <span asp-validation-for="ForgotPasswordInput.Email" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center py-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex">
                    <div class="mr-auto">
                        <a asp-area="Identity" asp-page="/About" class="px-2">About</a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="px-2">Login</a>
                        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </div>
                    <i onclick="window.open('https://github.com/joey32793/OpenRedding')" class="fab fa-github fa-2x px-2"></i>
                    <i onclick="window.open('https://registry.jsonresume.org/joey32793')" class="fas fa-code fa-2x px-2"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
